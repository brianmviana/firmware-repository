{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics":"readonly",
        "SharedArrayBuffer":"readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier" : "error",
        "class-methods-use-this" : "off",
        "no-param-reassign" : "off",
        "camelcase" : "off",
        "no-unused-vars" : [
            "error",
            { "argsIgnorePattern": "next" }
        ]
    }
}
